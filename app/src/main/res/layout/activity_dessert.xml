<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    tools:context=".DessertActivity">

    <ImageView
        android:id="@+id/imageView"
        android:layout_width="match_parent"
        android:layout_height="150dp"
        android:layout_marginTop="20dp"
        android:layout_weight="1"
        app:srcCompat="@drawable/icon_buffet_while" />

    <TextView
        android:id="@+id/textViewTitle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/imageView"
        android:layout_centerHorizontal="true"
        android:text="Antojitos de Buffet"
        android:textColor="#DB9423"
        android:textSize="25dp"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/textView2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/textViewTitle"
        android:layout_centerHorizontal="true"
        android:text="Y sin Faltar, Deleita tu paladar este"
        android:textSize="18dp"
        android:textColor="#707070"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/tvDataAnto"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/textView2"
        android:layout_centerHorizontal="true"
        android:text="Fecha"
        android:textColor="#DB9423"
        android:textSize="18dp"
        android:textStyle="bold" />

    <ScrollView
        android:id="@+id/scrollViewAntojitos"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginTop="15dp"
        android:layout_marginStart="30dp"
        android:layout_below="@id/tvDataAnto">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical" >

            <TextView
                android:id="@+id/menuA1"
                android:layout_width="350dp"
                android:layout_height="wrap_content"
                android:layout_below="@+id/textView5"
                android:layout_centerInParent="true"
                android:layout_marginTop="10dp"
                android:background="@drawable/text_style"
                android:padding="24dp"
                android:textColor="@color/white"
                android:textSize="20sp"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintRight_toRightOf="parent" />

            <TextView
                android:id="@+id/menuA2"
                android:layout_width="350dp"
                android:layout_height="wrap_content"
                android:layout_below="@+id/menuA1"
                android:layout_centerInParent="true"
                android:layout_marginTop="10dp"
                android:background="@drawable/text_style"
                android:padding="24dp"
                android:textColor="@color/white"
                android:textSize="20sp"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintRight_toRightOf="parent" />

            <TextView
                android:id="@+id/menuA3"
                android:layout_width="350dp"
                android:layout_height="wrap_content"
                android:layout_below="@+id/menuA2"
                android:layout_centerInParent="true"
                android:layout_marginTop="10dp"
                android:background="@drawable/text_style"
                android:padding="24dp"
                android:textColor="@color/white"
                android:textSize="20sp"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintRight_toRightOf="parent" />

            <TextView
                android:id="@+id/menuA4"
                android:layout_width="350dp"
                android:layout_height="wrap_content"
                android:layout_below="@+id/menuA4"
                android:layout_centerInParent="true"
                android:layout_marginTop="10dp"
                android:background="@drawable/text_style"
                android:padding="24dp"
                android:textColor="@color/white"
                android:textSize="20sp"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintRight_toRightOf="parent" />

            <TextView
                android:id="@+id/menuA5"
                android:layout_width="350dp"
                android:layout_height="wrap_content"
                android:layout_below="@+id/menuA4"
                android:layout_centerInParent="true"
                android:layout_marginTop="10dp"
                android:background="@drawable/text_style"
                android:padding="24dp"
                android:textColor="@color/white"
                android:textSize="20sp"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintRight_toRightOf="parent" />

            <TextView
                android:id="@+id/menuA6"
                android:layout_width="350dp"
                android:layout_height="wrap_content"
                android:layout_below="@+id/menuA5"
                android:layout_centerInParent="true"
                android:layout_marginTop="10dp"
                android:background="@drawable/text_style"
                android:padding="24dp"
                android:textColor="@color/white"
                android:textSize="20sp"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintRight_toRightOf="parent" />

        </LinearLayout>
    </ScrollView>

</RelativeLayout>